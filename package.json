{
  "name": "homequest-clone",
  "description": "An Aurelia 2 client application.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "???"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "aurelia": "dev"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "@aurelia/testing": "dev",
    "htmlhint": "^0.14.2",
    "sass-lint": "^1.13.1",
    "@aurelia/plugin-gulp": "dev",
    "gulp": "^4.0.2",
    "gulp-dumber": "^1.0.3",
    "gulp-typescript": "^5.0.1",
    "gulp-plumber": "^1.2.1",
    "merge2": "^1.4.1",
    "gulp-terser": "^2.0.0",
    "gulp-if": "^3.0.0",
    "del": "^6.0.0",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "connect-injector": "^0.4.4",
    "serve-static": "^1.14.1",
    "socket.io": "^3.0.4",
    "open": "^7.3.0",
    "cross-env": "^7.0.3",
    "gulp-dart-sass": "^1.0.2",
    "node-sass-package-importer": "^5.3.2",
    "gulp-postcss": "^9.0.0",
    "postcss": "^8.2.1",
    "autoprefixer": "^10.1.0",
    "postcss-url": "^10.1.1",
    "@types/node": "^14.14.16",
    "typescript": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "@types/jest": "^26.0.19",
    "@aurelia/ts-jest": "dev",
    "cypress": "^6.2.0",
    "eslint-plugin-cypress": "^2.11.2",
    "start-server-and-test": "^1.11.6"
  },
  "scripts": {
    "lint:js": "eslint src test cypress --ext .js,.ts",
    "lint:css": "sass-lint -c .sass-lint.yml \"src/**/*.scss\"",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "gulp",
    "build": "gulp clean && cross-env NODE_ENV=production gulp build",
    "clear-cache": "gulp clear-cache",
    "test": "jest",
    "cypress": "cypress run",
    "test:e2e": "cross-env CI=1 start-server-and-test start http://localhost:9000 cypress"
  },
  "jest": {
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": "@aurelia/ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}